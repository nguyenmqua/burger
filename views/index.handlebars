

<div class="jumbotron">
  <center>
  <h1 class="display-2">Burgers</h1>
  </center>
</div>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col col-lg-4">
      <h2>Burgers Waiting</h2>
          <ul>
          {{#each burgers}}
            {{#unless devoured}}
            {{>burgers/burger-block}}
            {{/unless}}
          {{/each}}
        </ul> 
    </div>

    <div class="col-md-4">
    <h2>Add a burger</h2>
      <form class="create-form">      
        <div class="form-group">
          <label for="burg">Burger's Name:</label>
          <input type="text" id="burg" name="name">
        </div>
        <center>
        <button type="submit"class="btn btn-warning mb-3">Add a Burger!</button>
        </center>
      </form>
      <center>
      <img src="/assets/image/burger.jpg" alt="burger" width="200" height="200">
      </center>       
     </div>

    <div class="col col-lg-4">
      <h2>Burgers Devoured!</h2>
        <ul>
          {{#each burgers}}
            {{#if devoured}}
            <li> {{burger_name}}</li>
            {{/if}}
          {{/each}}
          </ul>
    </div>
  </div>



